{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "module": "es6",
    "jsx": "react",
    "target": "es5",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["./src/**/*"]
}
